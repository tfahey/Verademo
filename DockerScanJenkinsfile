pipeline {
   agent any
   tools {
        maven 'apache-maven-3.8.6' 
    }

   stages {
      stage('Verify Branch') {
         steps {
            echo "$GIT_BRANCH"
         }
      }
      stage('Package') {
         steps {
            echo "package"
            sh (script: """
                pwd
                mvn -f app/pom.xml clean package
                pwd
            """)  
            }
      }
      stage('SCA shell script') {
         steps {
            withCredentials([string(credentialsId: 'SRCCLR_API_TOKEN', variable: 'SRCCLR_API_TOKEN')]) {
            echo "srcclr scan"
               sh (script: """
                  cd app
                  pwd
                  docker pull lerer/verademo-tomcat:latest
                  curl -sSL https://download.sourceclear.com/ci.sh | sh -s scan --image lerer/verademo-tomcat:latest
                  cd ..
                  pwd
               """)
            }
         }
      }
   }
   post {
      always {
         archiveArtifacts artifacts: 'app/target/*.war', followSymlinks: false
      }
   }
}
