pipeline {
   agent any

   stages {
      stage('Verify Branch') {
         steps {
            echo "$GIT_BRANCH"
         }
      }
      stage('Package') {
         steps {
            echo "package"
            sh (script: """
                pwd
                mvn -f app/pom.xml clean package
                pwd
            """)  
            }
      }
      stage('SCA scan') {
         steps {
            withCredentials([string(credentialsId: 'SRCCLR_API_TOKEN', variable: 'SRCCLR_API_TOKEN')]) {
            echo "SCA scan"
               sh (script: """
                  cd app
                  curl -sSL https://download.sourceclear.com/ci.sh | bash -s --debug --allow-dirty --update-advisor --scm-uri https://54321-ScaProject --scm-rev 1.0 --scm-ref master --scm-ref-type branch
                  cd ..
               """)
            }
         }
      }
   }
   post {
      always {
         archiveArtifacts artifacts: 'app/target/*.war', followSymlinks: false
      }
   }
}
